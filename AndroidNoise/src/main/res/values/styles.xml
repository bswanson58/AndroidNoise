<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseText" parent="android:style/Widget.TextView">

    </style>

    <style name="TitleText" parent="BaseText">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/TitleText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubTitleText" parent="BaseText">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/SubTitleText</item>
    </style>

    <style name="HeaderText" parent="BaseText">
        <item name="android:textSize">@dimen/noise_header_text_size</item>
        <item name="android:textColor">@color/HeaderText</item>
    </style>

    <style name="SubHeaderText" parent="BaseText">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/HeaderText</item>
    </style>

    <style name="LongListStyle" parent="@android:style/Widget.ListView">
        <item name="android:layout_margin">7dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">#E8E8E8</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <style name="ShortListStyle" parent="@android:style/Widget.ListView">
        <item name="android:layout_margin">7dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">#E8E8E8</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="PlayButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textSize">8pt</item>
    </style>

    <style name="separatorViewHorizontal">
        <item name="android:background">@drawable/divider_gradient_horizontal</item>
    </style>
    <style name="separatorViewVertical">
        <item name="android:background">@drawable/divider_gradient_vertical</item>
    </style>
</resources>
