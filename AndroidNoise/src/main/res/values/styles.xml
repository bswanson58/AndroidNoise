<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseText" parent="android:style/Widget.TextView">

    </style>

    <style name="TitleText" parent="BaseText">
        <item name="android:textSize">@dimen/noise_title_textSize</item>
        <item name="android:textColor">@color/TitleText</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubTitleText" parent="BaseText">
        <item name="android:textSize">@dimen/noise_subtitle_textSize</item>
        <item name="android:textColor">@color/SubTitleText</item>
    </style>

    <style name="HeaderText" parent="BaseText">
        <item name="android:textSize">@dimen/noise_header_text_size</item>
        <item name="android:textColor">@color/HeaderText</item>
    </style>

    <style name="SubHeaderText" parent="BaseText">
        <item name="android:textSize">@dimen/noise_subtitle_textSize</item>
        <item name="android:textColor">@color/HeaderText</item>
    </style>

    <style name="CategoryText" parent="BaseText">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#C0C0C0</item>
    </style>

    <style name="SpinnerText" parent="BaseText">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/TitleText</item>
        <item name="android:paddingRight">@dimen/noise_base_padding</item>
        <item name="android:paddingLeft">@dimen/noise_base_padding</item>
    </style>

    <style name="SpinnerTitleText" parent="BaseText">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="LongListStyle" parent="@android:style/Widget.ListView">
        <item name="android:layout_margin">7dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">#E8E8E8</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>

    <style name="ShortListStyle" parent="@android:style/Widget.ListView">
        <item name="android:layout_margin">7dp</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:divider">#E8E8E8</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="SimpleListStyle" parent="@android:style/Widget.ListView">
        <item name="android:layout_margin">3dp</item>
        <item name="android:divider">#0000</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="SimpleListTextStyle" parent="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/SubTitleText</item>
    </style>

    <style name="SimpleListHeaderStyle" parent="SubHeaderText"/>

    <style name="PlayButtonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/play_button_selector</item>
    </style>

    <style name="separatorViewHorizontal">
        <item name="android:background">@drawable/divider_split_gradient_horizontal</item>
    </style>
    <style name="separatorViewVertical">
        <item name="android:background">@drawable/divider_split_gradient_vertical</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
</resources>
