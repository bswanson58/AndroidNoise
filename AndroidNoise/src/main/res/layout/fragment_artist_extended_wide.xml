<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/aei_artist_image"
        android:layout_width="@dimen/noise_image_maximum_width"
        android:layout_height="@dimen/noise_image_minimum_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:adjustViewBounds="true"/>

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/aei_artist_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/aei_artist_image"
        android:layout_margin="@dimen/noise_base_padding"
        android:layout_alignParentRight="true"
        android:gravity="right|bottom"
        android:text="The Rolling Stones"
        style="@style/TitleText"/>

    <TextView
        android:id="@+id/aei_artist_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aei_artist_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:text="Genre"
        style="@style/SubTitleText"/>

    <TextView
        android:id="@+id/aei_artist_website"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/aei_artist_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:autoLink="web"
        android:text="www.google.com"
        />

    <WebView
        android:id="@+id/aei_biography"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/aei_artist_image"
        android:layout_margin="@dimen/noise_base_padding"
        android:autoLink="web"/>

</RelativeLayout>