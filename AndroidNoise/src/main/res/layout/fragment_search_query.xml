<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/noise_base_padding">

    <EditText
        android:id="@+id/search_text_view"
        android:layout_width="wrap_content"
        android:minWidth="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />

    <Button
        android:id="@+id/execute_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_gravity="center_vertical"
        android:text="@string/search_button_title"
        />
</LinearLayout>