<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the Play Strategy to determine how tracks you have added are played."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:text="Play Strategy:"
                />

            <Spinner
                android:id="@+id/ps_play_strategies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ps_play_parameter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/noise_base_padding"
                />

            <Spinner
                android:id="@+id/ps_play_strategy_parameters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/noise_base_padding"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ps_play_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:text="Description of the selected play strategy."/>


        <View
            android:layout_height="2dp"
            android:layout_width="200dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/noise_base_padding"
            android:layout_marginBottom="@dimen/noise_base_padding"
            style="@style/separatorViewHorizontal"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use the Exhausted Strategy to determine how tracks are added after your selections are played."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:text="Exhausted Strategy:"
                />

            <Spinner
                android:id="@+id/ps_exhausted_strategies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/noise_base_padding"/>

            <TextView
                android:id="@+id/ps_exhausted_parameter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/noise_base_padding"
                />

            <Spinner
                android:id="@+id/ps_exhausted_strategy_parameters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ps_exhausted_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:text="Description of the exhausted play strategy."/>

        </LinearLayout>
</LinearLayout>