<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/qli_now_playing"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text=">"
        style="@style/TitleText"
        android:textColor="#04ff00"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/qli_item_name"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="left|top"
        android:layout_gravity="center_vertical"
        android:text="Beast Of Burden"
        style="@style/TitleText"
        android:layout_toRightOf="@+id/qli_now_playing"
        android:layout_marginTop="@dimen/noise_base_padding"
        />

    <TextView
        android:id="@+id/qli_album_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=" (The Rolling Stones/Sticky Fingers)"
        style="@style/SubTitleText"
        android:layout_toRightOf="@+id/qli_now_playing"
        android:layout_below="@+id/qli_item_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:15"
        android:id="@+id/qli_play_duration"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        style="@style/TitleText"
        android:layout_margin="@dimen/noise_base_padding"/>

</RelativeLayout>