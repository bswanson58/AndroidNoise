<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/noise_list_item_height"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/noise_base_padding"
                android:layout_marginBottom="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:layout_marginRight="30dp"
                android:paddingBottom="@dimen/noise_base_padding">

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/artist_list_item_name"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="5"
        android:text="@string/test_artist_name"
        android:gravity="bottom"
        style="@style/TitleText"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/album_count_title"
            android:layout_marginLeft="@dimen/noise_sub_item_indent"
            style="@style/SubTitleText"/>

        <TextView
            android:id="@+id/artist_list_item_albumCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_album_count"
            android:layout_marginLeft="@dimen/noise_text_spacer"
            style="@style/SubTitleText"/>

        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/artist_list_item_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_genre"
            style="@style/SubTitleText"/>

        </LinearLayout>
</LinearLayout>