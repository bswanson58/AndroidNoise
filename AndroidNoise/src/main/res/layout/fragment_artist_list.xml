<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistListActivity$PlaceholderFragment"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:text="@string/noise_al_artist_list"
        android:textSize="@dimen/noise_header_text_size"/>
    <ListView
        android:id="@+id/al_list_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginBottom="@dimen/noise_base_padding"/>

</LinearLayout>
