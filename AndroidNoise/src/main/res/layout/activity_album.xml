<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:name="com.SecretSquirrel.AndroidNoise.activities.AlbumInfoFragment"
        android:id="@+id/fragment_album_info"
        tools:layout="@layout/fragment_album_info"
        android:layout_weight="1"/>

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:name="com.SecretSquirrel.AndroidNoise.activities.TrackListFragment"
        android:id="@+id/fragment_track_list"
        tools:layout="@layout/fragment_track_list"
        android:layout_weight="1"/>
</LinearLayout>
