<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/noise_list_item_height"
              android:descendantFocusability="blocksDescendants">
    <Button
        android:id="@+id/play_button"
        android:layout_gravity="center_vertical"
        style="@style/PlayButtonStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal">

            <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
                android:id="@+id/tli_name"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/test_track_name"
                style="@style/TitleText"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tli_track_number"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="20dp"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:text="@string/test_track_number"
                style="@style/SubTitleText"/>

            <TextView
                android:id="@+id/tli_volume_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tli_track_number"
                android:layout_marginLeft="@dimen/noise_text_spacer"
                android:text="@string/test_volume_name"
                android:layout_centerVertical="true"
                style="@style/SubTitleText"/>

            <TextView
                android:id="@+id/tli_duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/noise_base_padding"
                android:layout_centerVertical="true"
                android:text="@string/test_duration"
                style="@style/SubTitleText"/>

            <RatingBar
                android:id="@+id/tli_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tli_duration"
                android:layout_marginRight="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:rating="3"
                style="@style/ratingBar"/>

            <CheckBox
                android:id="@+id/tli_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tli_rating"
                android:layout_centerVertical="true"
                android:button="@drawable/favorite_button_selector"
                android:enabled="false"
                android:checked="true"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>