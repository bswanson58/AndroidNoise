<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants">
    <Button
        android:id="@+id/play_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginBottom="@dimen/noise_base_padding"
        style="@style/PlayButtonStyle"
        android:layout_alignParentLeft="true"/>

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/tli_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/TitleText"
        android:layout_toRightOf="@+id/play_button"
        android:layout_alignBaseline="@+id/play_button"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_toLeftOf="@+id/tli_duration"/>

    <TextView
        android:id="@+id/tli_duration"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/TitleText"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/play_button"
        android:layout_centerVertical="true"/>
</RelativeLayout>