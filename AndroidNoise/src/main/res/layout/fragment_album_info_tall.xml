<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".AlbumActivity$PlaceholderFragment"
                android:orientation="vertical">

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/ai_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:text="The Rolling Stones"
        style="@style/TitleText"/>

    <LinearLayout
        android:id="@+id/ai_divider"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/ai_artist_name"
        android:weightSum="3">

        <View
            android:layout_height="3dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/divider_split_gradient_horizontal"
            />
    </LinearLayout>

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/ai_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ai_divider"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:text="Sticky Fingers"
        style="@style/TitleText"
        />

    <ImageView
        android:id="@+id/ai_album_cover_image"
        android:layout_width="@dimen/noise_image_maximum_width"
        android:layout_height="@dimen/noise_image_minimum_height"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/noise_base_padding"
        android:adjustViewBounds="true"
        android:layout_below="@+id/ai_album_name"/>

    <TextView
        android:id="@+id/ai_published_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Published: "
        style="@style/SubHeaderText"
        android:layout_below="@+id/ai_album_cover_image"
        android:layout_marginLeft="@dimen/noise_base_padding"/>

    <TextView
        android:id="@+id/ai_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014"
        style="@style/SubTitleText"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_below="@+id/ai_album_cover_image"
        android:layout_toRightOf="@+id/ai_published_header"/>

</RelativeLayout>
