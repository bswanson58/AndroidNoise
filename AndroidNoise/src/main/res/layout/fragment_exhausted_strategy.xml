<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use the Exhausted Strategy to determine how tracks are added after your selections are played."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:text="Exhausted Strategy:"
            />

        <Spinner
            android:id="@+id/ps_exhausted_strategies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/noise_base_padding"/>

        <TextView
            android:id="@+id/ps_exhausted_parameter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/noise_base_padding"
            />

        <Spinner
            android:id="@+id/ps_exhausted_strategy_parameters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ps_exhausted_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="Description of the exhausted play strategy."/>

</LinearLayout>