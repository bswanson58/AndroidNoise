<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.SecretSquirrel.AndroidNoise.views.AutoFitTextView
        android:id="@+id/ai_artist_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:text="@string/test_artist_name"
        style="@style/TitleText"/>

    <LinearLayout
        android:id="@+id/ai_divider"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/ai_artist_name"
        android:weightSum="3">

        <View
            android:layout_height="3dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@drawable/divider_split_gradient_horizontal"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/ai_artist_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ai_divider"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="@string/test_genre"
        style="@style/SubTitleText"/>

    <ImageView
        android:id="@+id/ai_artist_image"
        android:layout_width="@dimen/noise_image_maximum_width"
        android:layout_height="@dimen/noise_image_minimum_height"
        android:scaleType="fitCenter"
        android:layout_margin="@dimen/noise_base_padding"
        android:adjustViewBounds="true"
        android:layout_below="@+id/ai_artist_genre"
        android:contentDescription="@string/content_description_artist_image"/>

    <TextView
        android:id="@+id/ai_album_count_header"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/ai_artist_image"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="@string/album_count_title"
        style="@style/SubTitleText"/>

    <View
        android:id="@+id/ai_album_spacer"
        android:layout_height="1dp"
        android:layout_width="@dimen/noise_text_spacer"
        android:layout_below="@+id/ai_artist_image"
        android:layout_toRightOf="@id/ai_album_count_header"
        />

    <TextView
        android:id="@+id/ai_album_count"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/ai_artist_image"
        android:layout_toRightOf="@+id/ai_album_spacer"
        android:text="@string/test_album_count"
        style="@style/SubTitleText"/>

    <Button
        android:id="@+id/ai_artist_more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/noise_base_padding"
        android:text="@string/artist_button_more"/>

    <Button
        android:id="@+id/ai_artist_tracks"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/noise_base_padding"
        android:text="tracks"/>
</RelativeLayout>