<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:name="com.SecretSquirrel.AndroidNoise.activities.ArtistInfoFragment"
        android:id="@+id/fragment_artistInfo"
        tools:layout="@layout/fragment_artist_info"
        android:layout_weight="1"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:name="com.SecretSquirrel.AndroidNoise.activities.AlbumListFragment"
        android:id="@+id/fragment_albumList"
        tools:layout="@layout/fragment_album_list"
        android:layout_weight="1"/>
</LinearLayout>
