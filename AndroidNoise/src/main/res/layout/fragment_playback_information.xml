<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pi_drag_handle"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#ffb0b0b0">

        <TextView
            android:id="@+id/pi_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_toLeftOf="@+id/pi_track_position"
            android:layout_alignParentLeft="true"/>

        <View
            android:id="@+id/pi_drawer_pull"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:background="@drawable/drawer_pull"/>

        <TextView
            android:id="@+id/pi_track_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:text="@string/test_duration"
            android:layout_toLeftOf="@+id/pi_drawer_pull"/>

        <ProgressBar
            android:id="@+id/pi_progress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/pi_drawer_pull"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:progressDrawable="@drawable/track_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <ViewFlipper
            android:id="@+id/pi_image_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/pi_artist_image"
                android:layout_width="@dimen/noise_image_maximum_width"
                android:layout_height="@dimen/noise_image_minimum_height"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_artist_image"/>

            <ImageView
                android:id="@+id/pi_album_image"
                android:layout_width="@dimen/noise_image_maximum_width"
                android:layout_height="@dimen/noise_image_minimum_height"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_album_cover"/>

        </ViewFlipper>

        <TextView
            android:id="@+id/pi_artist_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pi_image_flipper"
            android:layout_marginTop="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:text="@string/test_artist_name"
            style="@style/TitleText"/>

        <LinearLayout
            android:id="@+id/pi_divider"
            android:layout_height="3dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/pi_image_flipper"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_below="@+id/pi_artist_name"
            android:gravity="right"
            android:weightSum="3"
            >

            <View
                android:layout_height="3dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:scaleX="-1"
                android:background="@drawable/divider_split_gradient_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/pi_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pi_divider"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:text="@string/test_album_name"
            style="@style/SubTitleText"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_marginBottom="@dimen/noise_base_padding"
            android:orientation="horizontal">

            <View
                android:id="@+id/pi_information_indicator"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="invisible"
                android:background="@color/control_panel"/>

            <Button
                android:id="@+id/pi_information"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/information"/>

            <View
                android:id="@+id/pi_audio_config_indicator"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_information"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:visibility="invisible"
                android:background="@color/control_panel"/>

            <Button
                android:id="@+id/pi_audio_config"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_information"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:background="@drawable/audio"/>

            <View
                android:id="@+id/pi_equalization_config_indicator"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_audio_config"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:visibility="invisible"
                android:background="@color/control_panel"/>

            <Button
                android:id="@+id/pi_equalization_config"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_audio_config"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:background="@drawable/equalization"/>

            <View
                android:id="@+id/pi_audio_strategy_indicator"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_equalization_config"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:visibility="invisible"
                android:background="@color/control_panel"/>

            <Button
                android:id="@+id/pi_strategy_config"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/pi_equalization_config"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:background="@drawable/configure_small"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>