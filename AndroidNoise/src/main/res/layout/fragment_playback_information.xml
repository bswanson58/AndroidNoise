<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <ViewFlipper
            android:id="@+id/pi_image_flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/pi_artist_image"
                android:layout_width="@dimen/noise_image_maximum_width"
                android:layout_height="@dimen/noise_image_minimum_height"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_artist_image"/>

            <ImageView
                android:id="@+id/pi_album_image"
                android:layout_width="@dimen/noise_image_maximum_width"
                android:layout_height="@dimen/noise_image_minimum_height"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/noise_base_padding"
                android:layout_marginLeft="@dimen/noise_base_padding"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_description_album_cover"/>

        </ViewFlipper>

        <TextView
            android:id="@+id/pi_artist_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pi_image_flipper"
            android:layout_marginTop="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_alignParentRight="true"
            android:gravity="right|bottom"
            android:text="@string/test_artist_name"
            style="@style/TitleText"/>

        <LinearLayout
            android:id="@+id/pi_divider"
            android:layout_height="3dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/pi_image_flipper"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="@dimen/noise_base_padding"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:layout_below="@+id/pi_artist_name"
            android:gravity="right"
            android:weightSum="3"
            >

            <View
                android:layout_height="3dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:scaleX="-1"
                android:background="@drawable/divider_split_gradient_horizontal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/pi_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pi_divider"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/noise_base_padding"
            android:text="@string/test_album_name"
            style="@style/SubTitleText"/>

    </RelativeLayout>
</LinearLayout>