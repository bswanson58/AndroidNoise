<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginRight="@dimen/noise_base_padding"
        >

        <TextView
            android:id="@+id/pac_volume_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/playback_audio_volume_title"
            style="@style/SubHeaderText"/>

        <com.SecretSquirrel.AndroidNoise.views.VerticalSeekBar
            android:id="@+id/pac_volume"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_above="@id/pac_volume_title"
            android:indeterminate="false"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/noise_base_padding"
            android:background="@drawable/ic_volume_high"/>

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_above="@id/pac_volume_title"
            android:layout_marginBottom="@dimen/noise_base_padding"
            android:background="@drawable/ic_volume_low"/>
        </RelativeLayout>

</RelativeLayout>