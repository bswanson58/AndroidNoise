<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:background="@color/control_panel">

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/transport_play"
        style="?android:attr/buttonStyleSmall"
        />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/play_button"
        android:text="@string/transport_stop"
        style="?android:attr/buttonStyleSmall"
        />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/stop_button"
        android:text="@string/transport_pause"
        style="?android:attr/buttonStyleSmall"
        />

    <Button
        android:id="@+id/next_track_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pause_button"
        android:text="@string/transport_next_track"
        style="?android:attr/buttonStyleSmall"
        />

    <Button
        android:id="@+id/previous_track_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/next_track_button"
        android:text="@string/transport_previous_track"
        style="?android:attr/buttonStyleSmall"
        />

    <Button
        android:id="@+id/repeat_track_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/previous_track_button"
        android:text="@string/transport_repeat"
        style="?android:attr/buttonStyleSmall"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/repeat_track_button"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tr_total_time"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/test_playing_time"
            android:gravity="center_vertical"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/tr_remaining_time"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="@string/test_remaining_time"
            android:gravity="center_vertical"
            android:layout_gravity="right"/>
        </LinearLayout>
</RelativeLayout>