<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/drop_shadow">

    <Spinner
        android:id="@+id/lm_library_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_margin="@dimen/noise_base_padding"
        />

    <Button
        android:id="@+id/lm_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:background="@android:drawable/btn_dialog"
        />

</RelativeLayout>