<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/drop_shadow">

    <TextView
        android:id="@+id/lm_selected_library_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="@string/library_manage_active_library"
        style="@style/SubHeaderText"/>

    <Spinner
        android:id="@+id/lm_library_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lm_selected_library_header"
        android:layout_margin="@dimen/noise_base_padding"
        android:minWidth="260dp"
        />

    <Button
        android:id="@+id/lm_sync_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lm_library_selector"
        android:layout_margin="@dimen/noise_base_padding"
        android:text="@string/library_manage_sync_library"
        />

    <Button
        android:id="@+id/lm_edit_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lm_sync_library"
        android:layout_toRightOf="@id/lm_sync_library"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="@string/library_manage_edit_library"
        />

    <TextView
        android:id="@+id/lm_current_device_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lm_sync_library"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="Current audio output device:"
        />

    <Spinner
        android:id="@+id/lm_device_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lm_current_device_header"
        android:layout_margin="@dimen/noise_base_padding"
        android:minWidth="260dp"
        />

    <Button
        android:id="@+id/lm_create_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/noise_base_padding"
        android:text="@string/library_manage_create_library"
        />

    <Button
        android:id="@+id/lm_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:background="@android:drawable/btn_dialog"
        />

</RelativeLayout>