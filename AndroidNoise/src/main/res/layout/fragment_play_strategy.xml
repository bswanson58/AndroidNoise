<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/ps_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/noise_base_padding"
        android:text="Playback Strategy"
        style="@style/CategoryText"/>


    <TextView
        android:id="@+id/ps_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="The Playback Strategy will determine how tracks you have added are played."/>

    <TextView
        android:id="@+id/ps_play_strategy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps_description"
        android:layout_marginLeft="24dp"
        android:text="Strategy:"
        style="@style/SpinnerTitleText"/>

    <Spinner
        android:id="@+id/ps_play_strategies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ps_play_strategy_title"
        android:layout_marginLeft="@dimen/noise_text_spacer"
        android:layout_alignBaseline="@+id/ps_play_strategy_title"/>

    <TextView
        android:id="@+id/ps_play_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps_play_strategy_title"
        android:layout_marginTop="@dimen/noise_base_padding"
        android:layout_alignLeft="@+id/ps_play_strategies"
        android:layout_marginLeft="@dimen/noise_base_padding"
        android:text="Description of the selected play strategy."
        style="@style/SubHeaderText"/>

    <Spinner
        android:id="@+id/ps_play_strategy_parameters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ps_play_description"
        android:layout_alignLeft="@+id/ps_play_strategies"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/ps_play_parameter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ps_play_strategy_parameters"
        android:layout_marginRight="@dimen/noise_text_spacer"
        android:layout_alignBaseline="@+id/ps_play_strategy_parameters"
        style="@style/SpinnerTitleText"/>


</RelativeLayout>